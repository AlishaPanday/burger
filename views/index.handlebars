<div class="text-center">
  <img src="../img/eat.gif" class="rounded" alt="burger">
</div>

<div class="container-fluid" id="jumbo1">
    <div class="row">
    <div class="col-12 col-sm-12 col-md-4 col-lg-4">
    </div>
    <div class="col">
      <h2>Add a Burger</h2>
      <form id="create-form">

        <div class="form-group">
          <input type="text" id="bu" name="name">
        </div>

        <div class="form-group">
          <input type="radio" name="eaten" value="1" id="eaten" checked> Devoured already!<br>
          <input type="radio" name="eaten" value="0" id="devour-now">Order Now!
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div> <br  /> <br  /> 
    <div class="col"></div>
  </div>
  <div class="row">
    <div class="col-12 col-sm-6 col-lg-4">
      {{!-- <h2>Cats that are not sleepy!</h2> --}}
      <h2>Order Successfull!</h2>
      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{>burger-block eat=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-12 col-sm-6 col-lg-4">
      {{!-- <h2>Cats that are sleepy!</h2> --}}
      <h2>Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burger-block eat=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  
</div>
